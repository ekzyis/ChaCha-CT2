<UserControl x:Class="Cryptool.Plugins.ChaChaVisualizationV2.View.StateMatrixInit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cryptool.Plugins.ChaChaVisualizationV2.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ItemsControl.xaml" />
                <ResourceDictionary Source="..\Styles\TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1"></Border>
        <ItemsControl Grid.Row="0" Grid.Column="0" Style="{StaticResource StateMatrix}">
            <ItemsControl.Resources>
                <Style TargetType="TextBox" BasedOn="{StaticResource Hex}">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </ItemsControl.Resources>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="0">
                <Viewbox Margin="1" >
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="1">
                <Viewbox Margin="1" >
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="2">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="3">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="0">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="1">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="2">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="3">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="0">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="1">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="2">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="3">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="0">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="1">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="2">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="3">
                <Viewbox Margin="1">
                    <TextBox Text="12345678" />
                </Viewbox>
            </Border>
        </ItemsControl>
    </Grid>
</UserControl>