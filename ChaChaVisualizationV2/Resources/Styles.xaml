<ResourceDictionary
  x:Class="Cryptool.Plugins.ChaChaVisualizationV2.Resources.Styles"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DefaultTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style x:Key="Text" TargetType="{x:Type TextBox}" BasedOn="{StaticResource DefaultTextBox}">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="RichText" TargetType="RichTextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style x:Key="UniformViewbox" TargetType="{x:Type Viewbox}">
        <Setter Property="StretchDirection" Value="Both" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>
</ResourceDictionary>